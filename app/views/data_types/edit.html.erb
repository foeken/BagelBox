<% content_for(:header) do %>
  <%= @data_type.name %>
<% end %>

<%= render :partial => "settings/sub_menu" -%>

<% form_for(@data_type) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "form", :locals => { :f => f } %>
  
  <p style="text-align:right;">
    <div class="right"><div class="button"><%= f.submit 'Update' %></div>&nbsp; or <%= link_to 'cancel', data_types_path %></div>
  </p>

<% end %>